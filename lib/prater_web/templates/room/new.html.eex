<h2>Add new room</h2>


<%= form_for @changeset, Routes.room_path(@conn, :create), fn f -> %>
   <%= render "form.html", Map.put(assigns, :action, Routes.room_path(@conn, :create)) %>
  <div class="form-group">
  
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= textarea f, :description, class: "form-control", rows: 5 %>
    <%= error_tag f, :description %>
  </div>

  <div class="form-group">
  </div>
<% end %>